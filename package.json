{
  "name": "soly",
  "version": "1.1.0",
  "description": "Powerful framework for building command-line apps with typescript.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "typescript",
    "cli",
    "node",
    "framework",
    "command",
    "command-line",
    "yargs",
    "commander",
    "cac",
    "zod"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "craft build",
    "build:watch": "craft build --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jiti tests/command.unit.ts && jiti tests/structs.unit.ts",
    "coverage": "c8 npm test",
    "lint": "run-s lint:ts lint:eslint lint:prettier",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint '**/*.ts'",
    "lint:prettier": "prettier --write --ignore-path ./.gitignore '**/*.{ts,json,yaml,md}'",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "release": "semantic-release",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=14"
  },
  "author": "Michel Betancourt",
  "dependencies": {
    "command-line-args": "^5.2.0",
    "string-similarity": "^4.0.4",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@kraftr/build": "^0.5.0",
    "@types/command-line-args": "^5.2.0",
    "@types/node": "^16.11.8",
    "@types/string-similarity": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "c8": "^7.10.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "6.0.0",
    "jiti": "^1.12.9",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "semantic-release": "^18.0.1",
    "tslib": "2.3.1",
    "typescript": "^4.1.0",
    "uvu": "^0.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdbetancourt/soly"
  },
  "bugs": {
    "url": "https://github.com/mdbetancourt/soly/issues"
  },
  "homepage": "https://github.com/mdbetancourt/soly#readme",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,md}": [
      "prettier --write"
    ]
  }
}
